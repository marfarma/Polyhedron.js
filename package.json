{
  "name": "polyhedron",
  "version": "0.0.0",
  "description": "Object Document Mapper for Angularjs & PouchDB",
  "main": "polyhedron.js",
  "scripts": {
    "test": "jshint -c .jshintrc polyhedron.js test/test-mocha.js && make test",
    "build": "mkdir -p dist && browserify polyhedron.js -o dist/polyhedron.js -s Polyhedron",
    "install": "napa"
  },
  "napa": {
    "angular": "angular/bower-angular",
    "angular-route": "angular/bower-angular-route",
    "angular-mocks": "angular/bower-angular-mocks",
    "pouchdb-gql": "pouchdb/GQL",
    "indexed-db-shim": "axemclion/IndexedDBShim"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marfarma/Polyhedron.js"
  },
  "keywords": [
    "PouchDB",
    "CouchDB",
    "Angularjs",
    "Object Document Mapper"
  ],
  "author": "Pauli Price",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marfarma/Polyhedron.js/issues"
  },
  "devDependencies": {
    "napa": "~0.3.0",
    "beefy": "~0.7.1",
    "q": "~0.9.7",
    "chai": "~1.8.1",
    "mocha": "~1.16.2",
    "jshint": "~2.3.0",
    "pouchdb": "~1.0.0",
    "istanbul": "~0.2.3",
    "karma-chrome-launcher": "~0.1.2",
    "karma-firefox-launcher": "~0.1.3",
    "karma-jasmine": "~0.1.5",
    "karma-script-launcher": "~0.1.0",
    "karma-html2js-preprocessor": "~0.1.0",
    "requirejs": "~2.1.10",
    "karma-requirejs": "~0.2.1",
    "karma-coffee-preprocessor": "~0.1.2",
    "karma-phantomjs-launcher": "~0.1.1",
    "karma": "~0.10.9",
    "karma-browserify": "0.0.6",
    "watchify": "~0.5.5",
    "browserify": "~3.24.13",
    "browserify-shim": "~3.2.2",
    "mocha-phantomjs": "~3.3.1",
    "chai-as-promised": "~4.1.0",
    "mocha-as-promised": "~2.0.0",
    "when": "~2.8.0",
    "ua-parser-js": "~0.6.2",
    "platform": "~1.0.0"
  }
}
